{
  "package": {
    "app": {
      "entity": {
        "profile": {
          "comment": "User profile.",
          "attr": {
            "user_ref": {"type": "ref"},
            "name": {"type": "string"}
          },
          "index": {
            "PK": {"type": "primary", "attrs": ["user_ref"]}
          },
          "relation": {
            "user": {
              "attrs": ["user_ref"],
              "ref": {"path": "/person", "attrs": ["identity"]}
            }
          }
        }
      }
    }
  },
  "refs": {
    "/person": ["identity"]
  }
}
