{
  "package": {
    "vnd": {
      "package": {
        "plugin": {
          "entity": {
            "address": {
              "comment": "Addresses are bound to user (fake registry in /plugin/ DEM).",
              "attr": {
                "id": {"type": "id"},
                "user_ref": {"type": "ref"},
                "date_created": {
                  "comment": "Date-time for address registration.",
                  "type": "datetime",
                  "default": "current"
                }
              },
              "relation": {
                "profile": {
                  "attrs": ["user_ref"],
                  "ref": {"path": "/profile", "attrs": ["profile_id"]}
                }
              }
            }
          }
        }
      }
    }
  },
  "refs": {
    "/profile": ["profile_id"]
  }
}
